@model ThreeLayerUI.Models.PatientViewModel

@{

}

<input type="hidden" asp-for="PatientId" />
<div class="border p-3 mt-4" style="max-width: 500px; margin: 0 auto;">
	<div class="row pb-2">
		<h2 class="text-primary text-center">Patient Details</h2>
		<hr />
	</div>
	<div class="mb-2 row p-1" style="margin-bottom: 10px;">
		<label asp-for="FirstName" class="p-0"></label>
		<input asp-for="FirstName" class="form-control" disabled/>
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
	<div class="mb-2 row p-1" style="margin-bottom: 10px;">
		<label asp-for="LastName" class="p-0"></label>
		<input asp-for="LastName" class="form-control" disabled />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	<div class="mb-2 row p-1" style="margin-bottom: 10px;">
		<label asp-for="BirthDate" class="p-0"></label>
		<input asp-for="BirthDate" class="form-control" disabled />
		<span asp-validation-for="BirthDate" class="text-danger"></span>
	</div>
	<div class="mb-2 row p-1" style="margin-bottom: 10px;">
		<label asp-for="Gender" class="p-0"></label>
		<input asp-for="Gender" class="form-control" disabled />
		<span asp-validation-for="Gender" class="text-danger"></span>
	</div>
	<div class="mb-2 row p-1" style="margin-bottom: 10px;">
		<label asp-for="ContactNumber" class="p-0"></label>
		<input asp-for="ContactNumber" class="form-control" disabled />
		<span asp-validation-for="ContactNumber" class="text-danger"></span>
	</div>
	<div class="mb-2 row p-1" style="margin-bottom: 10px;">
		<label asp-for="Address" class="p-0"></label>
		<input asp-for="Address" class="form-control" disabled />
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>
	<div class="row">
		<div class="col-6 col-md-3">
			<a asp-controller="Patient" asp-action="UpdatePatient" asp-route-id="@Model.PatientId" class="btn btn-primary form-control">
				Edit
			</a>


		</div>
		<div class="col-6 col-md-3">
			<a asp-controller="Patient" asp-action="Index" class="btn btn-outline-secondary form-control">
				Back
			</a>
		</div>
	</div>
</div>