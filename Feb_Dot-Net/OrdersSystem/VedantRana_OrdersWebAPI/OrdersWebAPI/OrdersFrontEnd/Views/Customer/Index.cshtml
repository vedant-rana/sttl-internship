@model IEnumerable<OrdersFrontEnd.Models.Customer>


@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<div class="row pt-4">
		<div class="col-6 pb-3">
			<h2 class="text-primary">Customers</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Customer" asp-action="AddCustomer" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Customer</a>
		</div>
	</div>


	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Email)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Address)
				</th>
				

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Email</td>
					<td>@item.Address</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Customer" asp-action="GetAllOrders" asp-route-id="@item.CustomerId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Orders
							</a>

							<a asp-controller="Customer" asp-action="UpdateCustomer" asp-route-id="@item.CustomerId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>

							<a asp-controller="Customer" asp-action="CustomerDetails" asp-route-id="@item.CustomerId" class="btn btn-success mx-2">
								<i class="bi bi-trash-fill"></i> Details
							</a>

							<a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-id="@item.CustomerId" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this Customer?');">
								<i class="bi bi-trash-fill"></i> Delete
							</a>

						</div>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>
