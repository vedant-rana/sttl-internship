@model IEnumerable<OrdersFrontEnd.Models.Order>


@{
	ViewData["Title"] = "Index";
	var customers = ViewBag.customerList;
}

<div class="container">
	<div class="row pt-4">
		<div class="col-6 pb-3">
			<h2 class="text-primary">Orders</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Order" asp-action="AddOrder" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Order</a>
		</div>
	</div>


	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.OrderId)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.CustomerId)
				</th>
				@if (customers != null)
				{
					<th>
						Customer Name
					</th>
				}
				<th>
					@Html.DisplayNameFor(model => model.Status)
				</th>


			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.OrderId</td>
					<td>@item.CustomerId</td>
					@if (customers != null)
					{
						@foreach(var c in customers)
						{
							if (item.CustomerId == c.CustId)
							{
								<td>@c.CustName</td>
								break;
							}
						}
					}
					<td>@item.Status</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Order" asp-action="UpdateOrder" asp-route-id="@item.OrderId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>

							<a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@item.OrderId" class="btn btn-success mx-2">
								<i class="bi bi-trash-fill"></i> Details
							</a>

							<a asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@item.OrderId" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this Order?');">
								<i class="bi bi-trash-fill"></i> Delete
							</a>

							<a asp-controller="OrderItem" asp-action="AddOrderItem" asp-route-id="@item.OrderId" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill"></i> Add Items
							</a>

						</div>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>
