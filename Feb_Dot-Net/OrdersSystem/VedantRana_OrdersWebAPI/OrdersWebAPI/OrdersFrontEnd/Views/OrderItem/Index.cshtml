@model IEnumerable<OrdersFrontEnd.Models.OrderItem>


@{
	ViewData["Title"] = "Index";
	var customers = ViewBag.customerList;
}

<div class="container">
	<div class="row pt-4">
		<div class="col-6 pb-3">
			<h2 class="text-primary">Order Items</h2>
		</div>
		<div class="col-6 text-end">
			@* <a asp-controller="OrderItem" asp-action="AddOrderItem" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add OrderItem</a> *@
		</div>
	</div>


	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.OrderId)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ProductId)
				</th>
				
				<th>
					@Html.DisplayNameFor(model => model.Quantity)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.UnitPrice)
				</th>


			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.OrderId</td>
					<td>@item.ProductId</td>
					<td>@item.Quantity</td>
					<td>@item.UnitPrice</td>
					<td>
						<div class="w-75 btn-group" role="group">
							

							<a asp-controller="OrderItem" asp-action="OrderItemDetails" asp-route-id="@item.OrderItemId" class="btn btn-success mx-2">
								<i class="bi bi-trash-fill"></i> Details
							</a>

							<a asp-controller="OrderItem" asp-action="DeleteOrderItem" asp-route-id="@item.OrderItemId" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this OrderItem?');">
								<i class="bi bi-trash-fill"></i> Delete
							</a>

						</div>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>
