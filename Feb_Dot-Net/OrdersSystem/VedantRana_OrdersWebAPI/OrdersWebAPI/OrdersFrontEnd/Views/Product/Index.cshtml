@model IEnumerable<OrdersFrontEnd.Models.Product>


@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<div class="row pt-4">
		<div class="col-6 pb-3">
			<h2 class="text-primary">Product</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="AddProduct" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Product</a>
		</div>
	</div>


	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Price)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.StockQuantity)
				</th>


			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Price</td>
					<td>@item.StockQuantity</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ProductId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>

							<a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductId" class="btn btn-success mx-2">
								<i class="bi bi-trash-fill"></i> Details
							</a>

							<a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this Product?');">
								<i class="bi bi-trash-fill"></i> Delete
							</a>

						</div>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>
