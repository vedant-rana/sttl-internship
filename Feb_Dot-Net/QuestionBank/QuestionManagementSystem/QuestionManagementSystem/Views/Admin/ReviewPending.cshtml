@model IEnumerable<QuestionManagementSystem.Models.QuestionsPaper>

@{
    ViewBag.Title = "ReviewPaper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Paper's Pending for Review</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.noOfQuestions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.creation_date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.noOfQuestions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.creation_date)
            </td>
            <td>
                @Html.ActionLink("Edit", "ReviewPaper", "Admin", new { id = item.paperId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
