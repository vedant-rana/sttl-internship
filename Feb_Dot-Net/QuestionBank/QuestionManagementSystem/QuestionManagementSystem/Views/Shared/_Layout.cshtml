<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <style>
        button>a{
            color: white;
            text-decoration:none;
        }
    </style>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Question Bank", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul></ul>
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Authentication", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", "Authentication", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="container d-flex mt-4">
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("admin"))
            {
                <button class="btn btn-primary">@Html.ActionLink("Add User", "CreateUser", "Admin", new { area = "" }, new { @class = "nav-buttonnk" })</button>
                <button class="btn btn-primary">@Html.ActionLink("All Users", "Index", "Admin", new { area = "" }, new { @class = "nav-buttonnk" })</button>
                <button class="btn btn-primary">@Html.ActionLink("Teachers", "TeachersList", "Admin", new { area = "" }, new { @class = "nav-buttonnk" })</button>
                <button class="btn btn-primary">@Html.ActionLink("Students", "StudentsList", "Admin", new { area = "" }, new { @class = "nav-buttonnk" })</button>
                <button class="btn btn-primary">@Html.ActionLink("Create Question Paper", "Create", "QuestionsPapers", new { area = "" }, new { @class = "nav-buttonnk" })</button="btn">
                <button class="btn btn-primary">@Html.ActionLink("Review Paper's", "ReviewPending", "Admin", new { area = "" }, new { @class = "nav-buttonnk" })</button>
                <button class="btn btn-primary">@Html.ActionLink("View Question Paper's", "Index", "QuestionsPapers", new { area = "" }, new { @class = "nav-buttonnk" })</button>
            }
            else if (User.IsInRole("teacher"))
            {
                <button class="btn btn-primary">@Html.ActionLink("Create Question Paper", "Create", "QuestionsPapers", new { area = "" }, new { @class = "nav-buttonnk" })</button>
                <button class="btn btn-primary">@Html.ActionLink("View Question Paper's", "Index", "QuestionsPapers", new { area = "" }, new { @class = "nav-buttonnk" })</button>
            }
            else
            {
                <button class="btn btn-primary">@Html.ActionLink("Question Papers", "Index", "Student", new { area = "" }, new { @class = "nav-buttonnk" })</button>
            }
        }
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
