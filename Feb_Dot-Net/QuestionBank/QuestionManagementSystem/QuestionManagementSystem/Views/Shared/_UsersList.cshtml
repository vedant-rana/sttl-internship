@model IEnumerable<QuestionManagementSystem.Models.User>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (ViewBag.UserType != null)
        {

            if (item.role == ViewBag.UserType)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.role)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", "Admin", new { id = item.id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "DeleteUser", "Admin", new { id = item.id }, new { @class = "btn btn-success" })
                    </td>
                </tr>
            }
        }
        else
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditUser", "Admin", new { id = item.id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "DeleteUser", "Admin", new { id = item.id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }

    }



</table>
