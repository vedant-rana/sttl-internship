@model IEnumerable<QuestionManagementSystem.Models.Question>@{    ViewBag.Title = "Exam";    Layout = "~/Views/Shared/_Layout.cshtml";    var title = ViewBag.title;    var desc = ViewBag.description;    var totalQues = ViewBag.totalQuestions;    var idx = 1;}<h2>Exam</h2><h3>@title</h3><h3>@desc</h3><h2>Exam</h2>@foreach (var item in Model){<br /><h5>Que @idx.  @Html.DisplayFor(modelItem => item.question1)</h5><p>    <input type="radio" name="@item.queId" value="@item.opt1" class="yourRadioClass" data-correct-answer="@item.answer" />    @item.opt1</p><p>    <input type="radio" name="@item.queId" value="@item.opt2" class="yourRadioClass" data-correct-answer="@item.answer" />    @item.opt2</p><p>    <input type="radio" name="@item.queId" value="@item.opt3" class="yourRadioClass" data-correct-answer="@item.answer" />    @item.opt3</p><p>    <input type="radio" name="@item.queId" value="@item.opt4" class="yourRadioClass" data-correct-answer="@item.answer" />    @item.opt4</p>idx = idx + 1;}<button id="submitBtn" class="btn btn-primary mt-3">Submit</button><script>document.addEventListener("DOMContentLoaded", function() {    document.getElementById("submitBtn").addEventListener("click", function(e) {        e.preventDefault();        var correctAnswersCount = 0;        var totalQuestions = @Html.Raw(Json.Encode(totalQues));        var checkedOptions = document.querySelectorAll('.yourRadioClass:checked');        checkedOptions.forEach(function(checkedOption) {            var correctAnswer = checkedOption.getAttribute('data-correct-answer');            if(checkedOption.value === correctAnswer) {                correctAnswersCount++;            }        });window.location.href = "/Student/Score?score=" + correctAnswersCount;    });});</script>